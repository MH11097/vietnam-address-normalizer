# Application Settings
APP_NAME=Address Parsing Service
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Database (SQLite - deprecated)
DATABASE_URL=sqlite:///./data/addresses.db
DB_POOL_SIZE=10

# PostgreSQL Configuration (primary database)
PG_HOST=ip
PG_PORT=port
PG_DATABASE=db
PG_USER=user
PG_PASSWORD=pass

# API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOONG_API_KEY=your_goong_api_key_here
MAPBOX_API_KEY=your_mapbox_api_key_here

# API Settings
API_TIMEOUT=10
MAX_RETRIES=3
RATE_LIMIT_PER_SECOND=10

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600
# REDIS_URL=redis://localhost:6379/0

# ML Models
ML_MODEL_PATH=./models
PHOBERT_MODEL_NAME=vinai/phobert-base

# Processing Configuration
CONFIDENCE_THRESHOLD_HIGH=0.85
CONFIDENCE_THRESHOLD_MEDIUM=0.70
CONFIDENCE_THRESHOLD_LOW=0.50

FUZZY_THRESHOLD_PROVINCE=0.90
FUZZY_THRESHOLD_DISTRICT=0.85
FUZZY_THRESHOLD_WARD=0.80
FUZZY_THRESHOLD_STREET=0.75

# API Weights
WEIGHT_LOCAL_DB=0.25
WEIGHT_GOOGLE_MAPS=0.40
WEIGHT_GOONG_MAPS=0.35
WEIGHT_MAPBOX=0.00

# Validation
CROSS_VALIDATION_BOOST=0.15
HIERARCHY_INVALID_PENALTY=0.20
SINGLE_SOURCE_PENALTY=0.20
APPROXIMATE_LOCATION_PENALTY=0.10

# Performance
PARALLEL_API_CALLS=true
MAX_CANDIDATES_PER_SOURCE=5
MAX_TOTAL_CANDIDATES=10
